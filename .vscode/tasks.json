{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build with clang++",
      "command": "C:/Program Files/LLVM/bin/clang++.exe",
      "args": [
        "-std=c++20",
        "-g",
        "main.cc",
        "-o",
        "main.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}