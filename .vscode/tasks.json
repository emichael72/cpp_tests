{
  "version": "2.0.0",
  "tasks": [
{
      "label": "- Execute -",
      "type": "shell",
      "command": "clear; bin/cpp_tests",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
    },
	{
      "label": "Build All Tests",
      "type": "shell",
      "command": "clear;make",
      "args": ["BUILD_TARGET=BUILD_ALL_TESTS"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Advance Tests",
      "type": "shell",
      "command": "clear;make",
      "args": ["BUILD_TARGET=BUILD_ADVANCE_TESTS"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Buffer Tests",
      "type": "shell",
      "command": "clear;make",
      "args": ["BUILD_TARGET=BUILD_BUFFER_TESTS"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$gcc"
    },
    {
      "label": "Build Templates Tests",
      "type": "shell",
      "command": "clear;make",
      "args": ["BUILD_TARGET=BUILD_TEMPLATES_TESTS"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$gcc"
    },
{
      "label": "Clean",
      "type": "shell",
      "command": "clear;make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": "$gcc"
    }
  ]
}